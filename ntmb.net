NTMB

.control
set gnuplot_terminal=png

source circuit.net

set sweep_values = ( 0 5 25 50 75 95 100 )

foreach sweep_param $sweep_values
  alterparam bass_val = $sweep_param
  mc_source
  ac dec 500 10 10000
  let bass_$sweep_param = db(v(n_15))
end
alterparam bass_val = 50
mc_source

gnuplot graphs/bass 
+            ac1.bass_0
+            ac2.bass_5
+            ac3.bass_25
+            ac4.bass_50
+            ac5.bass_75
+            ac6.bass_95
+            ac7.bass_100
+       ylimit -20 20
+       xlimit 10 10k
+       title "Bass sweep"
destroy all

foreach sweep_param $sweep_values
  alterparam treb_val = $sweep_param
  mc_source
  ac dec 500 10 10000
  let treb_$sweep_param = db(v(n_15))
end
alterparam treb_val = 50
mc_source

gnuplot graphs/treb 
+            ac1.treb_0
+            ac2.treb_5
+            ac3.treb_25
+            ac4.treb_50
+            ac5.treb_75
+            ac6.treb_95
+            ac7.treb_100
+       ylimit -20 20
+       xlimit 10 10k
+       title "Treble sweep"
destroy all

quit
.endc
.end
